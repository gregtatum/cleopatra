{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    // Make the type checking as strict as possible.
    "strict": true,
    // Allow esnext syntax. Otherwise the default is ES5 only.
    "target": "esnext",
    "lib": ["esnext", "dom"],
    // Do not modify the output, allow eslint to do so.
    "jsx": "preserve",
    "noEmit": true,
    // Paths are relative to this:
    "baseUrl": ".",
    "paths": {
      // Map paths like "firefox-profiler/path/to/file.s" to "src/path/to/file.js"
      "firefox-profiler": ["src"]
    }
  },
  "include": ["./src/actions/**/*.ts","./src/actions/**/*.tsx"],
  "exclude": [
    "node_modules",
    "bin"
  ]
}
