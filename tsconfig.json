{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    // Make the type checking as strict as possible.
    "strict": true,
    // Allow esnext syntax. Otherwise the default is ES5 only.
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      // Map firefox-profiler for shortcuts for imports.
      "firefox-profiler/*": [
        "./src/*"
      ]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "bin"
  ]
}
